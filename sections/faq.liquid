<style>
  .faq-section {
    padding: {{ section.settings.section_padding_top | default: 4 }}rem 0 {{ section.settings.section_padding_bottom | default: 4 }}rem 0;
    position: relative;
  }

  .faq-container {
    max-width: {{ section.settings.max_width | default: 800 }}px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  .faq-title {
    text-align: center;
    font-size: {{ section.settings.title_font_size | default: 2.5 }}rem;
    font-weight: 700;
    font-family: 'Satoshi', sans-serif;
    color: #ffffff;
    margin-bottom: {{ section.settings.title_margin_bottom | default: 3 }}rem;
    background: linear-gradient(135deg, #ffffff 0%, #e0e7ff 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    line-height: 1.2;
    text-shadow: 0 0 20px rgba(255, 255, 255, 0.3);
  }

  .faq-item {
    position: relative;
    margin-bottom: {{ section.settings.item_spacing | default: 1 }}rem;
    background: rgba(0, 0, 0, 0.15);
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: {{ section.settings.border_radius | default: 16 }}px;
    overflow: hidden;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    box-shadow: 
      0 0 0 1px rgba(255, 255, 255, 0.05),
      0 8px 32px rgba(0, 0, 0, 0.12),
      0 0 40px rgba(255, 255, 255, 0.02);
  }

  .faq-item::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, 
      rgba(255, 255, 255, 0.1) 0%,
      transparent 30%,
      transparent 70%,
      rgba(0, 0, 0, 0.1) 100%);
    border-radius: 16px;
    pointer-events: none;
    z-index: 0;
    opacity: 0;
    transition: opacity 0.4s ease;
  }

  .faq-item:hover {
    background: rgba(0, 0, 0, 0.25);
    border-color: rgba(255, 255, 255, 0.2);
    transform: translateY(-2px);
    box-shadow: 
      0 0 0 1px rgba(255, 255, 255, 0.15),
      0 12px 48px rgba(0, 0, 0, 0.2),
      0 0 60px rgba(255, 255, 255, 0.1);
  }

  .faq-item:hover::before {
    opacity: 1;
  }

  .faq-item.active {
    background: rgba(0, 0, 0, 0.3);
    border-color: rgba(255, 255, 255, 0.25);
    box-shadow: 
      0 0 0 1px rgba(255, 255, 255, 0.2),
      0 16px 64px rgba(0, 0, 0, 0.3),
      0 0 80px rgba(255, 255, 255, 0.15);
  }

  .faq-item.active::before {
    opacity: 1;
  }

  .faq-question {
    position: relative;
    padding: 1.5rem 1.75rem 1.5rem 1.5rem;
    cursor: pointer;
    user-select: none;
    display: flex;
    align-items: center;
    justify-content: space-between;
    transition: all 0.3s ease;
    z-index: 1;
  }

  .faq-question h3 {
    font-size: {{ section.settings.question_font_size | default: 1.4 }}rem;
    font-weight: 700;
    font-family: 'Satoshi', sans-serif;
    color: rgba(255, 255, 255, 0.9);
    margin: 0;
    line-height: 1.4;
    text-shadow: 0 0 10px rgba(255, 255, 255, 0.3);
    flex: 1;
    padding-right: 1.25rem;
  }

  .faq-icon {
    position: relative;
    width: 24px;
    height: 24px;
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 8px;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    flex-shrink: 0;
    box-shadow: 0 0 10px rgba(255, 255, 255, 0.1);
  }

  .faq-icon::before,
  .faq-icon::after {
    content: '';
    position: absolute;
    background: rgba(255, 255, 255, 0.9);
    transition: all 0.3s ease;
    border-radius: 1px;
    box-shadow: 0 0 4px rgba(255, 255, 255, 0.3);
  }

  .faq-icon::before {
    width: 12px;
    height: 2px;
  }

  .faq-icon::after {
    width: 2px;
    height: 12px;
  }

  .faq-item.active .faq-icon {
    background: rgba(255, 255, 255, 0.2);
    border-color: rgba(255, 255, 255, 0.4);
    transform: rotate(45deg);
    box-shadow: 
      0 4px 16px rgba(0, 0, 0, 0.4),
      0 0 20px rgba(255, 255, 255, 0.2);
  }

  .faq-item.active .faq-icon::after {
    opacity: 0;
    transform: rotate(90deg);
  }

  .faq-answer {
    max-height: 0;
    overflow: hidden;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    opacity: 0;
  }

  .faq-item.active .faq-answer {
    max-height: 300px;
    opacity: 1;
  }

  .faq-answer-content {
    padding: 0 1.5rem 1.75rem 1.5rem;
    color: rgba(255, 255, 255, 0.85);
    font-size: {{ section.settings.answer_font_size | default: 1 }}rem;
    font-family: 'General Sans', sans-serif;
    font-weight: 500;
    line-height: 1.6;
    text-shadow: 0 1px 2px rgba(0, 0, 0, 0.3);
    transform: translateY(-10px);
    transition: transform 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    z-index: 1;
  }

  .faq-answer-content a {
    color: rgba(255, 255, 255, 1);
    text-decoration: underline;
    text-decoration-color: rgba(255, 255, 255, 0.5);
    text-underline-offset: 2px;
    transition: all 0.3s ease;
    font-weight: 600;
    text-shadow: 0 0 8px rgba(255, 255, 255, 0.5);
  }

  .faq-answer-content a:hover {
    color: rgba(255, 255, 255, 1);
    text-decoration-color: rgba(255, 255, 255, 1);
    text-shadow: 0 0 12px rgba(255, 255, 255, 0.8);
    transform: translateY(-1px);
  }

  .faq-item.active .faq-answer-content {
    transform: translateY(0);
  }

  .pricing-highlight {
    background: rgba(0, 0, 0, 0.2);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 12px;
    padding: 1rem 1.25rem;
    margin-top: 0.75rem;
    font-weight: 600;
    font-family: 'General Sans', sans-serif;
    color: rgba(255, 255, 255, 0.9);
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.3);
    position: relative;
    overflow: hidden;
  }

  .pricing-highlight::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, 
      rgba(255, 255, 255, 0.05) 0%,
      transparent 50%,
      rgba(255, 255, 255, 0.05) 100%);
    pointer-events: none;
  }

  .pricing-highlight strong {
    color: rgba(255, 255, 255, 1);
    text-shadow: 0 0 8px rgba(255, 255, 255, 0.5);
  }

  /* Mobile responsive */
  @media (max-width: 768px) {
    .faq-section {
      padding: 3rem 0;
    }

    .faq-container {
      padding: 0 1rem;
    }

    .faq-title {
      font-size: 2rem;
      margin-bottom: 2rem;
    }

    .faq-question {
      padding: 1.25rem 1.5rem 1.25rem 1.25rem;
    }

    .faq-question h3 {
      font-size: 1.1rem;
      padding-right: 1rem;
    }

    .faq-answer-content {
      padding: 0 1.25rem 1.5rem 1.25rem;
      font-size: 0.9rem;
    }

    .faq-icon {
      width: 20px;
      height: 20px;
    }

    .faq-icon::before {
      width: 10px;
    }

    .faq-icon::after {
      height: 10px;
    }

    .pricing-highlight {
      padding: 0.875rem 1rem;
      font-size: 0.9rem;
    }
  }
</style>

{%- if section.settings.show_section -%}
<section class="faq-section">
  <div class="faq-container">
    <h2 class="faq-title">{{ section.settings.title | default: "Frequently Asked Questions" }}</h2>
    
    <div class="faq-item" onclick="toggleFAQ(this)">
      <div class="faq-question">
        <h3>How does your Shopify theme work?</h3>
        <div class="faq-icon"></div>
      </div>
      <div class="faq-answer">
        <div class="faq-answer-content">
          A Shopify theme is a template that lets you design your own e-commerce website on Shopify. Just install it in your Shopify account and customize it to your liking.
        </div>
      </div>
    </div>

    <div class="faq-item" onclick="toggleFAQ(this)">
      <div class="faq-question">
        <h3>Does your theme work with all Shopify plans?</h3>
        <div class="faq-icon"></div>
      </div>
      <div class="faq-answer">
        <div class="faq-answer-content">
          Yes, our themes work with all Shopify plans. Start your Shopify for $1 for three months here: <a href="https://shopify.pxf.io/3ej3yd" target="_blank" rel="noopener noreferrer">https://shopify.pxf.io/3ej3yd</a>
        </div>
      </div>
    </div>

    <div class="faq-item" onclick="toggleFAQ(this)">
      <div class="faq-question">
        <h3>What does the 1-year license mean? What happens if I don't renew?</h3>
        <div class="faq-icon"></div>
      </div>
      <div class="faq-answer">
        <div class="faq-answer-content">
          A 1-year license gives you access to support and updates for one year. If you don't renew, you wont be able to customize or receive updates for your theme.
        </div>
      </div>
    </div>

    <div class="faq-item" onclick="toggleFAQ(this)">
      <div class="faq-question">
        <h3>How much do your themes cost?</h3>
        <div class="faq-icon"></div>
      </div>
      <div class="faq-answer">
        <div class="faq-answer-content">
          <div class="pricing-highlight">
            <strong>Plain Jane Starter:</strong> $50<br>
            <strong>Plain Jane:</strong> $100 (1-year) | $300 (lifetime)<br>
            <strong>Plain Jane Interactive:</strong> $150 (1-year) | $350 (lifetime)
          </div>
        </div>
      </div>
    </div>

    <div class="faq-item" onclick="toggleFAQ(this)">
      <div class="faq-question">
        <h3>What's included in the installation service?</h3>
        <div class="faq-icon"></div>
      </div>
      <div class="faq-answer">
        <div class="faq-answer-content">
          Our installation service helps install the Shopify theme onto your account for you. This is not a full store setup.
        </div>
      </div>
    </div>

    <div class="faq-item" onclick="toggleFAQ(this)">
      <div class="faq-question">
        <h3>Can I use 1 license in multiple Shopify stores?</h3>
        <div class="faq-icon"></div>
      </div>
      <div class="faq-answer">
        <div class="faq-answer-content">
          No, each license is valid for one Shopify store. If you want to use it in multiple stores, you need to purchase another license.
        </div>
      </div>
    </div>

    <div class="faq-item" onclick="toggleFAQ(this)">
      <div class="faq-question">
        <h3>Can I transfer my theme to a different store?</h3>
        <div class="faq-icon"></div>
      </div>
      <div class="faq-answer">
        <div class="faq-answer-content">
          Yes, you can transfer your license to a different Shopify store by providing your license key and the new store URL to our support team.
        </div>
      </div>
    </div>
  </div>
</section>

<script>
function toggleFAQ(element) {
  const accordionBehavior = '{{ section.settings.accordion_behavior | default: "single" }}';
  
  if (accordionBehavior === 'single') {
    // Close all other FAQ items for accordion behavior
    const allFAQs = document.querySelectorAll('.faq-item');
    allFAQs.forEach(faq => {
      if (faq !== element) {
        faq.classList.remove('active');
      }
    });
  }
  
  // Toggle the clicked item
  element.classList.toggle('active');
}

// Add keyboard navigation
document.addEventListener('keydown', (e) => {
  if (e.key === 'Escape') {
    // Close all FAQ items on escape
    const allFAQs = document.querySelectorAll('.faq-item');
    allFAQs.forEach(faq => {
      faq.classList.remove('active');
    });
  }
});

// Add click outside to close functionality
document.addEventListener('click', (e) => {
  if (!e.target.closest('.faq-item')) {
    const allFAQs = document.querySelectorAll('.faq-item.active');
    allFAQs.forEach(faq => {
      faq.classList.remove('active');
    });
  }
});

// Smooth scroll to FAQ item when opened
document.querySelectorAll('.faq-item').forEach(item => {
  item.addEventListener('click', () => {
    setTimeout(() => {
      if (item.classList.contains('active')) {
        item.scrollIntoView({ 
          behavior: 'smooth', 
          block: 'nearest' 
        });
      }
    }, 100);
  });
});
</script>
{%- endif -%}

